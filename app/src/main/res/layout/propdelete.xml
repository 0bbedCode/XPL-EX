<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivDeleteProp"
        android:layout_width="?android:attr/listPreferredItemHeightSmall"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:outlineAmbientShadowColor="@color/lightColorSystem"
        android:src="@drawable/ic_remix_alert_fill" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivDeleteProp"
        android:lines="3"
        android:maxLines="3"
        android:text="Are you sure you want to delete the property? This will delete the property not the Group Setting unless it was deleted from settings and this is the last property in the group"
        />

</RelativeLayout>